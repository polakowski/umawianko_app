<div class='event-card event-card--past'>
  <div class='event-card__tagging m-m--r'>
    <div class='event-card__date m-m--r'>
      <%= format_short_event_date(event) %>
    </div>
    <div class='event-card__circle' style="background: <%= event_type_bg_color(event) %>">
      <span class="umi umi--<%= event_circle_icon(event) %>"></span>
    </div>
  </div>

  <div class='event-card__content'>
    <%= link_to event.name, event, class: 'event-card__title link--cancel inverted' %>
  </div>
</div>
