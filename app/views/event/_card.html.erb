<div class='event-card'>
  <div class='event-card__tagging m-m--r'>
    <div class='event-card__date m-m--r'>
      <%= format_event_date(event) %>
    </div>
    <div class='event-card__circle'>
      <span class='umi umi--checkmark'></span>
    </div>
  </div>

  <div class='event-card__content'>
    <%= link_to event.name, event, class: 'event-card__title link--primary inverted' %>
    <%= render partial: 'shared/data_pair', locals: { icon: 'place', value: event.place } %>
    <p class='event-card__description'>
      <%= event.description %>
    </p>
  </div>
</div>
